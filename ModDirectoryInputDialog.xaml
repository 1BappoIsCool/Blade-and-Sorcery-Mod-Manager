<Window x:Class="Blade_Sorcery_ModManager.ModDirectoryInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blade_Sorcery_ModManager"
        mc:Ignorable="d"
        Title="ModDirectoryInputDialog" Height="100" Width="200">
    <Grid>
        <TextBox x:Name="ModDirTextBox" Margin="10" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="80" Margin="5" Click="OK_Click" VerticalAlignment="Bottom"
                    Background="Transparent" BorderBrush="DimGray"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click" VerticalAlignment="Bottom"
                    Background="Transparent" BorderBrush="DimGray"/>
        </StackPanel>
    </Grid>
</Window>
